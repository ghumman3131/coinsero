<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inception.coinsero.SendActivity"
    android:layout_margin="16dp">

    <com.inception.coinsero.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter receipt address"
        android:id="@+id/receipt_address"
        android:inputType="text"
        android:theme="@style/EditTextTheme"
        android:imeOptions="actionNext"/>


    <com.inception.coinsero.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="15sp"
        />

    <com.inception.coinsero.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Address"
        android:background="@drawable/primary_btn"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:clickable="true"
        android:onClick="scan_address"
        />

    <com.inception.coinsero.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        android:id="@+id/amount_et"
        android:theme="@style/EditTextTheme"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"/>


    <com.inception.coinsero.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:background="@drawable/primary_btn"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"

        android:clickable="true"
        android:onClick="send_amount"

        />
</LinearLayout>
